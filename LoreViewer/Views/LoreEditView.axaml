<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LoreViewer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LoreViewer.Views.LoreEditView"
             x:DataType="vm:LoreViewModel">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="400"/>
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <DockPanel Grid.Row="0" Grid.Column="0">
      <Button Name="BtnOpenFolder" Command="{Binding OpenLibraryFolderCommand}" DockPanel.Dock="Right" Content="Select Lore Library Folder" Width="160"></Button>
      <TextBox Text="{Binding LoreLibraryFolderPath}" IsReadOnly="True"></TextBox>
    </DockPanel>

    <DockPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
      <Button Content="Open Lore Settings Editor" DockPanel.Dock="Right" Command="{Binding OpenLoreSettingsEditor}"/>
    </DockPanel>

    <TabControl Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
      <TabItem Header="Nodes and Collections">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
          </Grid.RowDefinitions>
          <Border BorderBrush="Black" BorderThickness="1">
            <Grid >
              <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition/>
              </Grid.RowDefinitions>

              <Label Content="Nodes" />
              <TreeView Grid.Row="1" ItemsSource="{Binding Nodes}" SelectedItem="{Binding CurrentlySelectedTreeNode, Mode=OneWayToSource}" Grid.Column="0" Name="NodesTreeView" >
                <TreeView.ItemTemplate>
                  <TreeDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding DisplayName}" />
                  </TreeDataTemplate>
                </TreeView.ItemTemplate>
              </TreeView>
            </Grid>
          </Border>

          <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1">
            <Grid >
              <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition/>
              </Grid.RowDefinitions>

              <Label Content="Collections" />

              <TreeView Grid.Row="2" ItemsSource="{Binding NodeCollections}" Grid.Column="0" Name="CollectionsTreeView">
                <TreeView.ItemTemplate>
                  <TreeDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding DisplayName}" />
                  </TreeDataTemplate>
                </TreeView.ItemTemplate>
              </TreeView>
            </Grid>
          </Border>
        </Grid>
        
      </TabItem>
      
      <TabItem Header="Errors and Warnings">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
          </Grid.RowDefinitions>
          <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1">
            <Grid >
              <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition/>
              </Grid.RowDefinitions>

              <Label Content="Errors" />

              <ListBox Grid.Row="2" ItemsSource="{Binding Errors}" Grid.Column="0" Name="ErrorsListView">
                <ListBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding}" />
                  </DataTemplate>
                </ListBox.ItemTemplate>
              </ListBox>
            </Grid>
          </Border>

          <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1">
            <Grid >
              <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition/>
              </Grid.RowDefinitions>

              <Label Content="Warnings" />

              <ListBox Grid.Row="2" ItemsSource="{Binding Warnings}" Grid.Column="0" Name="WarningsListView">
                <ListBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding}" />
                  </DataTemplate>
                </ListBox.ItemTemplate>
              </ListBox>
            </Grid>
          </Border>
        </Grid>
      </TabItem>
    </TabControl>

    <DockPanel Grid.Row="1" Grid.Column="1" Margin="5">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="30"/>
          <RowDefinition/>
        </Grid.RowDefinitions>
        <Label BorderBrush="Black" BorderThickness="1" Content="Node Info" />
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" >
          <ScrollViewer>
            
            <TextBlock Margin="5" Name="CurrentNodeInfoTextBlock" Text="{Binding CurrentlySelectedTreeNode.CurrentNodeInfoText, Mode=OneWay}" TextWrapping="Wrap"/>
          </ScrollViewer>
        </Border>
      </Grid>
    </DockPanel>
  </Grid>
</UserControl>
